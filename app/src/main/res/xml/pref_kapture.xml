<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="languages"
        android:title="@string/pref_title_languages"
        android:entries="@array/pref_languages_titles"
        android:entryValues="@array/pref_languages_values"
        android:summary="%s"
        android:defaultValue="en_US"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <SwitchPreference
        android:key="sync_wifi"
        android:title="@string/pref_title_sync_wifi"
        android:defaultValue="false"
        android:summary="If enabled, no data will be transferred to or from the phone by this app" />

</PreferenceScreen>
